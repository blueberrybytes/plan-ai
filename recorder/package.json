{
  "name": "plan-ai-recorder",
  "version": "1.0.0",
  "private": true,
  "description": "Plan AI Desktop Recorder â€” capture any meeting and generate tasks with AI",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "prebuild": "mkdir -p macos && swiftc -O macos/AudioCapture.swift -o macos/AudioCapture || true",
    "predev": "mkdir -p macos && swiftc -O macos/AudioCapture.swift -o macos/AudioCapture || true",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-vite build && electron-builder",
    "package:win": "electron-vite build && electron-builder --win"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.18",
    "@mui/material": "^5.15.18",
    "firebase": "^10.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.blueberrybytes.plan-ai-recorder",
    "productName": "Plan AI Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*"
    ],
    "mac": {
      "icon": "resources/icon.png",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "extraFiles": [
        {
          "from": "macos/AudioCapture",
          "to": "MacOS/AudioCapture"
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "macos/entitlements.plist",
      "entitlementsInherit": "macos/entitlements.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Plan AI Recorder needs microphone access to record your voice during meetings.",
        "NSScreenCaptureUsageDescription": "Plan AI Recorder needs screen capture access to cleanly capture system audio output."
      }
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
