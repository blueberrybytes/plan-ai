rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to presentation images
    match /presentations/{userId}/{presentationId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to downloaded packages (e.g. DMG, EXE)
    match /packages/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
